{
  "private": true,
  "version": "0.1.0",
  "name": "mpmm",
  "description": "Mass Production Myaku-Myaku",
  "scripts": {
    "style:fix": "prettier --write . && eslint . --fix && stylelint **/*.scss --fix",
    "style:ci": "prettier --check . && eslint . && stylelint **/*.scss",
    "serve": "rimraf dist && parcel src/index.html src/_/index.html",
    "e2e:dev": "cypress open",
    "build": "rimraf dist && parcel build src/index.html --no-source-maps --public-url /mpmm"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.7.0",
    "@types/node": "^18.8.3",
    "@types/pixelmatch": "^5.2.4",
    "@types/pngjs": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "cypress": "^10.9.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "parcel": "^2.7.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^6.0.0",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.13.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^5.0.0"
  }
}
